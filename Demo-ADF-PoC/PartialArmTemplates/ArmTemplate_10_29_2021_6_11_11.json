		{
			"name": "[concat(parameters('factoryName'), '/Sftp1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "Sftp",
				"typeProperties": {
					"host": "192.168.1.119",
					"port": "21",
					"skipHostKeyValidation": true,
					"authenticationType": "Basic",
					"userName": "aschalew",
